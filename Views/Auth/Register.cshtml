@{
    var err = ViewData["err"] as String[];
}
<h1>
    Регистрация нового пользователя
</h1>

@ViewData["Error"]

<form 
    action="/Auth/RegUser" 
    method="post" 
    enctype="multipart/form-data"
>   
    Имя:    <input type="text"     name="RealName"/>
    @if (!String.IsNullOrEmpty(err?[1]))
    {
        @err[1]
    }
    <br/>
    Логин:  <input type="text"     name="Login"/>
    @if (!String.IsNullOrEmpty(err?[2]))
    {
        @err[2]
    }
    <br/>
    Пароль:   <input type="password" name="Password1" />
    @if (!String.IsNullOrEmpty(err?[3]))
    {
        @err[3]
    }
    <br/>
    Повтор:   <input type="password" name="Password2" />
    @if (!String.IsNullOrEmpty(err?[4]))
    {
        @err[4]
    }
    <br/>
    E-mail:   <input type="email"    name="Email"/>
    @if (!String.IsNullOrEmpty(err?[5]))
    {
        @err[5]
    }
    <br/>
    Аватарка: <input type="file"     name="Avatar"    />
    <br/>
    <button type="submit">Зарегистрироваться</button>
</form>

@{
    var UserData = ViewData["UserData"] as RegUserModel; 
}
@if(UserData?.Avatar != null)
{
    <img src="/img/@UserData.Avatar.FileName" />
}